@page
@using CASE.YL.WebApp.Models;
@model CursusDetailModel
@{
    ViewData["Title"] = "Cursus Detail";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">@Model.Cursus.Titel</h2>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Details</h6>
                    <p><strong>Duur:</strong> @Model.Cursus.Duur dagen</p>
                    <p><strong>Code:</strong> @Model.Cursus.Code</p>

                    <h3 class="card-subtitle mt-4">Cursisten</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Voornaam</th>
                                <th>Achternaam</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cursist in Model.Cursisten)
                            {
                                <tr>
                                    <td>@cursist.Voornaam</td>
                                    <td>@cursist.Achternaam</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="javascript:history.back()" class="btn btn-secondary">Terug naar overzicht</a>
                </div>
            </div>
        </div>
    </div>
</div>
